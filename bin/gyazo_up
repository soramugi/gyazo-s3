#!/usr/bin/env ruby

#https://github.com/mitukiii/gyazo-server

require 'net/http'

class GyazoClient
  ID   = `cat ~/Library/Gyazo/id`
  #HOST = 'pic.soramugi.net'
  #PORT = 80
  HOST = 'localhost'
  PORT = 3000
  CGI  = '/items'
  UA   = 'Gyazo/2.0'

  def initialize(args)
    @files = args
  end

  def start
    if @files.empty?
      exit 1
    else
      @files.each do |file|
        data = IO.read(file)
        basename = File.basename(file)
        upload(data, basename)
      end
    end
  end

  def upload(data, basename)
    boundary = '----BOUNDARY----'
    content = <<EOF
--#{boundary}\r
content-disposition: form-data; name="id"\r
\r
#{ID}\r
--#{boundary}\r
content-disposition: form-data; name="imagedata"; filename="#{basename}"\r
\r
#{data}\r
--#{boundary}--\r
EOF
    header ={
      'Content-Length' => content.length.to_s,
      'Content-type' => "multipart/form-data; boundary=#{boundary}",
      'User-Agent' => UA
    }
    Net::HTTP.start(HOST, PORT) do |http|
      response = http.post(CGI, content, header)
      url = response.response.body
      `echo #{url} | pbcopy`
      `open #{url}`
    end
  end

  def self.start(args)
    new(args).start
  end
end

GyazoClient.start(ARGV)
